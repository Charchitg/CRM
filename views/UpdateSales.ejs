<%- include('./Header') %>


<div style="margin: 1rem;width: 60%; height:auto; padding:2rem; display:flex;margin:auto;justify-content: center;">
    <span class="navbar-brand h1"><%= page_title %> </span>
</div>
<form style="width: 60%; height:auto; padding:2rem; display:flex;margin:auto;flex-direction:column;" method="post" action="/update_sale/<%= data.customer_id %>/<%= sale_id %>  ">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Customer Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="customer_email" name="customer_email" placeholder="<%= customer_email %> " required>
            <small class="form-text text-muted">
                Customer must exist in your Customer list
            </small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="amount" id="amount" placeholder="<%= data.amount %> " required>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Paid</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="paid" placeholder="<%= data.paid %> " required>
            <small class="form-text text-muted">
                If amount is paid enter Yes , else No.
            </small>
        </div>
    </div>

    
    <div class="form-group row" style="display: flex; justify-content:center;">
        <div class="col-sm-10" style="width: 100%;display: flex; justify-content:center;">
            <button type="submit" class="btn btn-dark">Update Sale</button>
        </div>
    </div>
</form>


<%- include('Footer') %>